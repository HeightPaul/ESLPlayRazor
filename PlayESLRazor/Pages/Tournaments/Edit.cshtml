@page
@model PlayESLRazor.Pages.Tournaments.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<h4>Tournament</h4>
<hr style="color: black; background-color:black; height: 1px;" />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Tournament.TournamentId" />
            <div class="form-group">
                <label asp-for="Tournament.Title" class="control-label"></label>
                <input asp-for="Tournament.Title" class="form-control" />
                <span asp-validation-for="Tournament.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.PlayerFormat" class="control-label"></label>
                <input asp-for="Tournament.PlayerFormat" class="form-control" />
                <span asp-validation-for="Tournament.PlayerFormat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tournament.Tier" class="control-label"></label>
                <select asp-for="Tournament.Tier" class="form-control"></select>
                <span asp-validation-for="Tournament.Tier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
